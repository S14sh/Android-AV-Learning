<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/record_and_play_startRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Record"
        app:layout_constraintBottom_toTopOf="@id/record_and_play_stopRecord"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/record_and_play_startPlay"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/record_and_play_stopRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/record_and_play_stopPlay"
        app:layout_constraintTop_toBottomOf="@id/record_and_play_startRecord" />

    <Button
        android:id="@+id/record_and_play_startPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Play"
        app:layout_constraintBottom_toTopOf="@id/record_and_play_stopPlay"
        app:layout_constraintLeft_toRightOf="@id/record_and_play_startRecord"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/record_and_play_stopPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/record_and_play_stopRecord"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_and_play_startPlay" />

</androidx.constraintlayout.widget.ConstraintLayout>